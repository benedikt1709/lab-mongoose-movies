
{{#each Movie}}
<p>
    <h2>{{this.title}}</h2>
    <a href="/movies/{{this._id}}" class="button">Show Details</a>
    <form action="/movies/{{this._id}}/delete" method="post">
    <button type="submit">Delete</button>
    </form>
    <form action="/movies/{{this._id}}/edit" method="get">
    <button type="submit">Edit</button>
    </form>
</p>
{{/each}}
<a href="/movies/new" class="button">Add Movie</a>